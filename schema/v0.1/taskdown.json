{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Taskdown",
  "description": "Schema for Taskdown task management format",
  "$id": "https://taskdown.org/schema/v0.1/taskdown.json",
  "type": "object",
  "required": ["tasks"],
  "properties": {
    "version": {
      "type": "string",
      "enum": ["0.1"]
    },
    "tasks": {
      "type": "object",
      "patternProperties": {
        "^[A-Z][A-Z0-9\\-]+$": {
          "type": "object",
          "required": ["title", "status"],
          "properties": {
            "title": {
              "type": "string",
              "minLength": 1,
              "maxLength": 200
            },
            "status": {
              "type": "string",
              "enum": ["pending", "in_progress", "done", "canceled"]
            },
            "type": {
              "type": "string",
              "enum": ["task", "epic", "story", "bug"]
            },
            "description": {
              "type": "string"
            },
            "created": {
              "type": "string",
              "format": "date-time"
            },
            "updated": {
              "type": "string",
              "format": "date-time"
            },
            "due": {
              "type": "string",
              "format": "date"
            },
            "similar": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z][A-Z0-9\\-]+$"
              },
              "description": "List of task IDs that are similar to this task"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "relationships": {
      "type": "object",
      "patternProperties": {
        "^[A-Z][A-Z0-9\\-]+$": {
          "type": "object",
          "properties": {
            "blocks": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z][A-Z0-9\\-]+$"
              }
            },
            "blocked_by": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z][A-Z0-9\\-]+$"
              }
            },
            "part_of": {
              "type": "string",
              "pattern": "^[A-Z][A-Z0-9\\-]+$"
            },
            "subtasks": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z][A-Z0-9\\-]+$"
              },
              "description": "List of task IDs that are subtasks of this task"
            },
            "relates_to": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z][A-Z0-9\\-]+$"
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "additionalProperties": false
}