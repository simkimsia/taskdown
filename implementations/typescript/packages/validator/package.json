{
    "name": "@taskdown/validator",
    "version": "0.1.0",
    "description": "Framework-agnostic TypeScript library for validating Taskdown format",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "scripts": {
      "build": "tsup ../../src/core/index.ts --format cjs,esm --dts --outDir dist",
      "test": "jest",
      "lint": "eslint ../../src/core --ext .ts",
      "typecheck": "tsc --noEmit"
    },
    "dependencies": {
      "js-yaml": "^4.1.0",
      "zod": "^3.22.4"
    },
    "devDependencies": {
      "@types/jest": "^29.5.11",
      "@types/js-yaml": "^4.0.9",
      "@types/node": "^20.10.6",
      "@typescript-eslint/eslint-plugin": "^6.17.0",
      "@typescript-eslint/parser": "^6.17.0",
      "eslint": "^8.56.0",
      "jest": "^29.7.0",
      "ts-jest": "^29.1.1",
      "tsup": "^8.0.1",
      "typescript": "^5.3.3"
    }
  }