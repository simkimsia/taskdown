{
    "name": "@taskdown/validator",
    "version": "0.1.0",
    "type": "module",
    "description": "Framework-agnostic TypeScript library for validating Taskdown format",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "scripts": {
      "build": "tsup src/index.ts --format cjs,esm --dts --outDir dist",
      "test": "jest",
      "lint": "eslint src --ext .ts",
      "typecheck": "tsc --noEmit",
      "quicktest": "tsx test.ts"
    },
    "dependencies": {
      "js-yaml": "^4.1.0",
      "zod": "^3.22.4"
    },
    "devDependencies": {
      "@types/jest": "^29.5.12",
      "@types/js-yaml": "^4.0.9",
      "@types/node": "^20.11.24",
      "@typescript-eslint/eslint-plugin": "^7.1.1",
      "@typescript-eslint/parser": "^7.1.1",
      "eslint": "^8.57.0",
      "jest": "^29.7.0",
      "ts-jest": "^29.1.2",
      "ts-node": "^10.9.2",
      "tsx": "^4.7.1",
      "tsup": "^8.0.2",
      "typescript": "^5.3.3"
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifiers": true,
      "moduleTypes": {
        "**/*": "esm"
      }
    }
}